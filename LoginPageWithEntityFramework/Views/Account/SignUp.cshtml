
@{
    Layout = null;
}
@model LoginPageWithEntityFramework.Models.Account
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up</title>
    <link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <div class="main">

        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <form method="post" asp-controller="account" asp-action="signup">
                        <h2 class="form-title">Create account</h2>
                        <div class="form-group">
                            <input type="text" class="form-input" placeholder="Username" asp-for="Username"/>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-input" placeholder="Password" asp-for="Password"/>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input"  placeholder="FullName" asp-for="FullName"/>
                            
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" placeholder="Email" asp-for="Email" />
                            
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" id="submit" class="form-submit" value="Sign up" />
                        </div>
                    </form>
                </div>
            </div>
        </section>

    </div>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
